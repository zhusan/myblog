<!DOCTYPE html>
<html>
  <head>
    <title>Myblog</title>
    <meta name="description" content="老三的blog">
    <meta name="keywords" content="老三,博客,ruby,rails,编程">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery.tagcanvas" %>
    <%= javascript_include_tag "kindeditor/plugins/code/prettify" %>
    <%= csrf_meta_tags %>
    <script type="text/javascript">
      $(document).ready(function() {
          if(!$('#myCanvas').tagcanvas({
            textColour: null,
            outlineColour:'#ff00ff',
            reverse: true,
            initial: [0.2,0.2],
            depth:0.8,
            maxpeed: 0.05
          },'tags')) {
          $('#myCanvasContainer').hide();
          }
      });
</script>
      </head>
      <body class="left-sidebar is-desktop is-1000px">
        <!-- Wrapper -->
        <div id="wrapper">
          <div id='promote'>
            <%= render partial:  "/common/messages" %>
          </div>
          <!-- Content -->
          <div id="content" class="mobileUI-main-content">
            <%= yield %>
          </div>
          <!-- Sidebar -->
          <div id="sidebar">
            <%= render partial: "/common/front_sidebar" %>
          </div>
        </div>
        <script type="text/javascript">
          prettyPrint();//print code
          <!-- 多说评论 -->
          var duoshuoQuery = {short_name: "<%=Setting.duoshuo.short_name %>"};
          (function() {
            var ds = document.createElement('script');
            ds.type = 'text/javascript';ds.async = true;
            ds.src = 'http://static.duoshuo.com/embed.js';
            ds.charset = 'UTF-8';
            (document.getElementsByTagName('head')[0] 
            || document.getElementsByTagName('body')[0]).appendChild(ds);
          })();
</script>
  </body>
</html>
