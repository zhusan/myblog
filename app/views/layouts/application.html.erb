<!DOCTYPE html>
<html>
  <head>
    <title>Myblog</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "kindeditor/plugins/code/prettify" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="left-sidebar is-desktop is-1000px">
    <!-- Wrapper -->
    <div id="wrapper">
      <div id='promote'>
        <%= render partial:  "/common/messages" %>
      </div>
      <!-- Content -->
      <div id="content" class="mobileUI-main-content">
        <%= yield %>
      </div>
      <!-- Sidebar -->
      <div id="sidebar">
        <%= render partial: "/common/front_sidebar" %>
      </div>
    </div>
    <script type="text/javascript">
      prettyPrint();//print code
      var duoshuoQuery = {short_name:"zhusan"};
      (function() {
      var ds = document.createElement('script');
      ds.type = 'text/javascript';ds.async = true;
      ds.src = 'http://static.duoshuo.com/embed.js';
      ds.charset = 'UTF-8';
      (document.getElementsByTagName('head')[0] 
      || document.getElementsByTagName('body')[0]).appendChild(ds);
      })();
    </script>
  </body>
</html>
