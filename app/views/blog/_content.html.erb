<article class="is-post is-post-excerpt">
<header>
<h2><%= link_to blog.title, blog_path(blog) %></h2>
<p><label>标签：</label><%= get_blog_tags(blog.id) %></p>
</header>
<div class="info">
  <span class="date"><span class="month"><span><%= get_month_name(blog.created_at) %></span></span> <span class="day"> <%=blog.created_at.day %> </span></span>
  <ul class="stats">
    <li><a href="<%=blog_path(blog)%>#respond" class="link-icon24 link-icon24-1">
      <%#=blog.comments.size %>
      <span class="ds-thread-count" data-thread-key="<%=blog.id%>">0</span>
    </a></li>
    <li><%= (link_to "编辑", edit_admin_blog_path(blog)) if session[:user] %></li>
  </ul>
</div>
<%= blog.content.html_safe %>
</article>

